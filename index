    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const CHART_COLORS = {
                primaryDark: '#003F5C',
                accentBlue: '#34657F',
                mediumBlue: '#6699CC',
                lightBlue: '#99CCFF',
                lightestBlue: '#CCE5FF'
            };

            const FONT_DEFAULTS = {
                font: {
                    family: "'Noto Sans SC', sans-serif",
                    size: 13,
                },
                color: '#4a5568'
            };

            function wrapLabel(label, maxLength = 16) {
                if (typeof label !== 'string' || label.length <= maxLength) {
                    return label;
                }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                for (const word of words) {
                    if ((currentLine + ' ' + word).trim().length > maxLength) {
                        lines.push(currentLine.trim());
                        currentLine = word;
                    } else {
                        currentLine = (currentLine + ' ' + word).trim();
                    }
                }
                if (currentLine) {
                    lines.push(currentLine.trim());
                }
                return lines;
            }

            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                    return label.join(' ');
                }
                return label;
            };
            
            const universalTooltipOptions = {
                plugins: {
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        },
                        backgroundColor: 'rgba(0, 63, 92, 0.9)',
                        titleFont: { size: 14, weight: 'bold' },
                        bodyFont: { size: 12 },
                        padding: 10,
                        cornerRadius: 4,
                        displayColors: true,
                    }
                }
            };

            if (document.getElementById('marketGrowthChart')) {
                new Chart(document.getElementById('marketGrowthChart'), {
                    type: 'line',
                    data: {
                        labels: ['2023', '2025', '2027', '2030'],
                        datasets: [{
                            label: '全球AIGC市场规模 (十亿美元)',
                            data: [30, 75, 120, 200],
                            borderColor: CHART_COLORS.mediumBlue,
                            backgroundColor: 'rgba(102, 153, 204, 0.2)',
                            fill: true,
                            tension: 0.4,
                            pointRadius: 5,
                            pointBackgroundColor: CHART_COLORS.mediumBlue
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: { display: true, text: '市场规模 (十亿美元)', ...FONT_DEFAULTS },
                                ticks: { ...FONT_DEFAULTS }
                            },
                            x: {
                                title: { display: true, text: '年份', ...FONT_DEFAULTS },
                                ticks: { ...FONT_DEFAULTS }
                            }
                        },
                        ...universalTooltipOptions,
                        plugins: {
                            ...universalTooltipOptions.plugins,
                            legend: {
                                labels: { ...FONT_DEFAULTS }
                            }
                        }
                    }
                });
            }

            if (document.getElementById('nftFunctionsChart')) {
                new Chart(document.getElementById('nftFunctionsChart'), {
                    type: 'radar',
                    data: {
                        labels: [
                            wrapLabel('多级版权管理'), 
                            wrapLabel('灵活版税设置'), 
                            wrapLabel('组合交易机制'), 
                            wrapLabel('自动化授权系统'), 
                            wrapLabel('衍生开发激励')
                        ],
                        datasets: [{
                            label: 'NFT功能成熟度与重要性',
                            data: [9, 10, 7, 8, 9],
                            backgroundColor: 'rgba(52, 101, 127, 0.4)',
                            borderColor: CHART_COLORS.accentBlue,
                            pointBackgroundColor: CHART_COLORS.accentBlue,
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: CHART_COLORS.accentBlue
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            r: {
                                beginAtZero: true,
                                max: 10,
                                pointLabels: { ...FONT_DEFAULTS, font: {...FONT_DEFAULTS.font, size: 11}},
                                grid: { color: 'rgba(0, 0, 0, 0.05)' },
                                angleLines: { color: 'rgba(0, 0, 0, 0.1)' }
                            }
                        },
                         ...universalTooltipOptions,
                        plugins: {
                            ...universalTooltipOptions.plugins,
                            legend: {
                                position: 'top',
                                labels: { ...FONT_DEFAULTS }
                            }
                        }
                    }
                });
            }

            if (document.getElementById('aifUtilityChart')) {
                new Chart(document.getElementById('aifUtilityChart'), {
                    type: 'doughnut',
                    data: {
                        labels: [
                            wrapLabel('平台治理'), 
